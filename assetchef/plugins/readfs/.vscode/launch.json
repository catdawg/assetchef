    "version": "0.2.0",
    "configurations": [
        
        {
            "type": "node",
            "request": "launch",
            "name": "Jest All",
            "program": "${workspaceRoot}/node_modules/jest/bin/jest",
            "args": [
                "--runInBand",
                "--detectOpenHandles"
            ],
            "console": "integratedTerminal",
            "smartStep": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Jest Current File",
            "program": "${workspaceRoot}/node_modules/jest/bin/jest",
            "args": [
                "${relativeFile}",
                "--detectOpenHandles"
            ],
            "console": "integratedTerminal",
            "smartStep": false
        }
    ]
}
